<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
       
       <%# #make into proper table! %>
        <table>
          <% @reviews.each do |review| %>
          <tr>
            <th>Customer review</th>
            <th>Rating:</th>
          </tr>
          <tr>
            <th><%= review.description %></th>
            <th><%= "#{review.rating}/5" %></th>  
          </tr>
          <% if @current_user.id == review.user_id%>
            <tr>
           <%=link_to "Delete", product_review_path(@product, review), method: :delete, data: {confirm: "Are you sure you want to delete this review?"}%>
            </tr>
           <%end%>
        <%end%>
       </table> 
        <% if current_user == nil%>
         <p>No form!</p>
        <% else %>
         <%= form_for :review, url: product_reviews_path(@product) do |f| %>
            <h3>New Review:</h3>
            <%= f.label :description %><br>
            <%= f.text_field :description %><br>

            <%= f.label :rating %><br>
            <%= f.select :rating, [1, 2, 3, 4, 5] %><br>

            <%= f.submit("Create review") %><br>
          <% end %>
        <% end %>
      </div>
    </div>
  

    
    
   
    

  </article>

</section>
